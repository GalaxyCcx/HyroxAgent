.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(16, 16, 19, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 2rpx solid rgba(255, 255, 255, 0.05);
  padding: 16rpx 48rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  z-index: 1000;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
  padding-top: 16rpx;
}

.indicator {
  position: absolute;
  top: 0;
  width: 48rpx;
  height: 6rpx;
  background: #42ff9e;
  border-radius: 6rpx;
  box-shadow: 0 0 16rpx #42ff9e;
}

.icon {
  font-size: 40rpx;
  transition: transform 0.2s;
}

.tab-bar-item.active .icon {
  transform: scale(1.1);
}

.text {
  font-size: 20rpx;
  font-weight: 700;
  color: #6b7280;
  transition: color 0.2s;
}

.tab-bar-item.active .text {
  color: #42ff9e;
}
