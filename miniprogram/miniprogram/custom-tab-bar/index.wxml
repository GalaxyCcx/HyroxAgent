<view class="tab-bar">
  <view 
    class="tab-bar-item {{active === index ? 'active' : ''}}"
    wx:for="{{list}}"
    wx:key="index"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <view class="indicator" wx:if="{{active === index}}"></view>
    <text class="icon">{{item.icon}}</text>
    <text class="text">{{item.text}}</text>
  </view>
</view>
