/**
 * 首页样式
 */

.page-container {
  min-height: 100vh;
  background: #101013;
  position: relative;
  overflow: hidden;
}

/* 背景图片 */
.bg-image-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 65vh;
  z-index: 0;
}

.bg-image {
  width: 100%;
  height: 100%;
  opacity: 0.5;
  filter: grayscale(100%);
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    180deg, 
    rgba(16, 16, 19, 0.3) 0%, 
    rgba(16, 16, 19, 0.6) 40%,
    rgba(16, 16, 19, 0.9) 70%,
    #101013 100%
  );
}

.content {
  position: relative;
  z-index: 1;
  padding: 40rpx 40rpx;
  padding-bottom: calc(180rpx + env(safe-area-inset-bottom));
}

/* 主标题 */
.hero-section {
  margin-top: 160rpx;
  margin-bottom: 48rpx;
}

.hero-title {
  display: flex;
  flex-direction: column;
}

.title-main {
  font-size: 96rpx;
  font-weight: 800;
  font-style: italic;
  color: #ffffff;
  line-height: 1.1;
  letter-spacing: -2rpx;
}

.title-sub {
  font-size: 44rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #42ff9e 0%, #00cc6a 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  margin-top: 16rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background: rgba(30, 32, 36, 0.85);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  padding: 16rpx 16rpx 16rpx 24rpx;
  margin-bottom: 80rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.search-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  opacity: 0.4;
}

.search-input {
  flex: 1;
  background: transparent;
  border: none;
  color: rgba(255, 255, 255, 0.3);
  font-size: 28rpx;
}

.search-btn {
  background: #42ff9e;
  color: #000000;
  font-size: 28rpx;
  font-weight: 700;
  padding: 24rpx 48rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(66, 255, 158, 0.3);
}

/* 区块 */
.section {
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(66, 255, 158, 0.3);
  border-top-color: #42ff9e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 16rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

/* 错误提示 */
.error-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.error-text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.retry-btn {
  padding: 16rpx 48rpx;
  background: #42ff9e;
  color: #000000;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
}

/* 赛事列表 */
.race-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.race-card {
  display: flex;
  align-items: center;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 32rpx;
  padding: 28rpx;
  transition: all 0.2s ease;
}

.race-card:active {
  background: rgba(30, 32, 36, 0.8);
  border-color: rgba(66, 255, 158, 0.3);
  transform: scale(0.98);
}

/* 赛季 */
.race-season {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #2A2D33;
  border-radius: 20rpx;
  padding: 24rpx 20rpx;
  width: 120rpx;
  margin-right: 28rpx;
}

.season-year {
  font-size: 20rpx;
  color: #42ff9e;
  font-weight: 700;
  text-transform: uppercase;
}

.season-num {
  font-size: 52rpx;
  font-weight: 800;
  color: #ffffff;
  line-height: 1.1;
}

/* 赛事信息 */
.race-info {
  flex: 1;
  min-width: 0;
}

.race-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 12rpx;
}

.race-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
}

.meta-venue,
.meta-participants {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 赛事状态 */
.race-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  border: 2rpx solid rgba(66, 255, 158, 0.3);
  border-radius: 12rpx;
  background: rgba(66, 255, 158, 0.05);
}

.status-icon {
  font-size: 20rpx;
  color: #42ff9e;
}

.status-text {
  font-size: 20rpx;
  font-weight: 700;
  color: #42ff9e;
}

.arrow {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.3);
  margin-left: 8rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}
