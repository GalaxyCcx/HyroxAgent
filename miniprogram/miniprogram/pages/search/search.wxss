/**
 * 搜索页样式
 */

.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #101013;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.back-icon {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.6);
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  background: transparent;
  border: none;
  color: #ffffff;
  font-size: 28rpx;
}

.search-placeholder {
  color: rgba(255, 255, 255, 0.3);
}

.clear-icon {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.3);
  padding: 8rpx 16rpx;
}

.search-btn {
  background: rgba(66, 255, 158, 0.2);
  color: #42ff9e;
  font-size: 24rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  margin-left: 16rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(66, 255, 158, 0.3);
  border-top-color: #42ff9e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 8rpx;
}

.loading-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
}

/* 错误提示 */
.error-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.error-text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.retry-btn {
  padding: 16rpx 48rpx;
  background: #42ff9e;
  color: #000000;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
}

/* 搜索结果 */
.results-section {
  padding: 24rpx 32rpx;
}

.results-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-bottom: 24rpx;
  display: block;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.athlete-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
}

.athlete-card:active {
  background: rgba(66, 255, 158, 0.05);
  border-color: rgba(66, 255, 158, 0.2);
}

.athlete-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.athlete-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.match-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
}

.card-arrow {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.3);
}

/* 空状态 */
.empty,
.initial {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon,
.initial-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text,
.initial-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 8rpx;
}

.empty-hint,
.initial-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
}
