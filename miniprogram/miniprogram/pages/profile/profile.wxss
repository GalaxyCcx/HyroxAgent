/**
 * 个人资料页样式
 */

.page-container {
  min-height: 100vh;
  background: #101013;
}

.content {
  padding: 48rpx 32rpx;
  padding-bottom: calc(180rpx + env(safe-area-inset-bottom));
}

/* ==================== 未登录状态 ==================== */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  margin-bottom: 64rpx;
}

.login-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background: linear-gradient(90deg, #42ff9e 0%, #00cc6a 100%);
  border: none;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 0 40rpx rgba(66, 255, 158, 0.3);
}

.login-btn::after {
  border: none;
}

.login-btn.loading {
  opacity: 0.7;
}

.login-btn .btn-icon {
  font-size: 36rpx;
}

.login-btn .btn-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
}

.login-btn .loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.2);
  border-top-color: #000000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.login-tip {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.3);
}

.guest-search {
  display: flex;
  align-items: center;
  background: rgba(30, 32, 36, 0.6);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin-top: 48rpx;
}

.guest-search:active {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(66, 255, 158, 0.3);
}

.guest-search .search-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.guest-search .search-text {
  flex: 1;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.guest-search .search-arrow {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.3);
}

/* ==================== 已登录状态 ==================== */

/* 头像区域 */
.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 48rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.avatar-wrapper:active {
  opacity: 0.8;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(66, 255, 158, 0.3);
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #42ff9e 0%, #00b3d4 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 40rpx rgba(66, 255, 158, 0.3);
}

.avatar-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
}

.user-info {
  flex: 1;
}

.user-info:active {
  opacity: 0.8;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 12rpx;
}

.user-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.id-tag {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.6);
  font-family: monospace;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.pro-tag {
  background: rgba(26, 77, 54, 1);
  color: #42ff9e;
  font-weight: 700;
  border: 2rpx solid rgba(66, 255, 158, 0.2);
}

.settings-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.settings-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

.settings-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 统计数据 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 48rpx;
}

.stat-card {
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 140rpx;
}

.stat-card.highlight {
  border-color: rgba(66, 255, 158, 0.2);
}

.stat-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.4);
  font-weight: 700;
}

.stat-label.primary {
  color: #42ff9e;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
}

/* Tab 栏 */
.tabs {
  display: flex;
  gap: 48rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
  margin-bottom: 24rpx;
}

.tab {
  padding-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.4);
  position: relative;
}

.tab.active {
  color: #ffffff;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 48rpx;
  height: 4rpx;
  background: #42ff9e;
  border-radius: 4rpx;
  box-shadow: 0 0 16rpx #42ff9e;
}

/* 搜索入口 */
.search-entry {
  display: flex;
  align-items: center;
  background: rgba(30, 32, 36, 0.6);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 48rpx;
}

.search-entry:active {
  background: rgba(255, 255, 255, 0.05);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-text {
  flex: 1;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}

.search-arrow {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.2);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-bottom: 32rpx;
}

.empty-btn {
  background: rgba(66, 255, 158, 0.1);
  border: 2rpx solid rgba(66, 255, 158, 0.3);
  border-radius: 16rpx;
  padding: 20rpx 48rpx;
}

.empty-btn:active {
  background: rgba(66, 255, 158, 0.2);
}

.empty-btn text {
  font-size: 28rpx;
  font-weight: 700;
  color: #42ff9e;
}
