/**
 * 个人资料页样式
 */

.page-container {
  min-height: 100vh;
  background: #101013;
}

.content {
  padding: 48rpx 32rpx;
  padding-bottom: calc(180rpx + env(safe-area-inset-bottom));
}

/* ==================== 未登录状态 ==================== */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  margin-bottom: 64rpx;
}

.login-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background: linear-gradient(90deg, #42ff9e 0%, #00cc6a 100%);
  border: none;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 0 40rpx rgba(66, 255, 158, 0.3);
}

.login-btn::after {
  border: none;
}

.login-btn.loading {
  opacity: 0.7;
}

.login-btn .btn-icon {
  font-size: 36rpx;
}

.login-btn .btn-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
}

.login-btn .loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.2);
  border-top-color: #000000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.login-tip {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.3);
}

.guest-search {
  display: flex;
  align-items: center;
  background: rgba(30, 32, 36, 0.6);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin-top: 48rpx;
}

.guest-search:active {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(66, 255, 158, 0.3);
}

.guest-search .search-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.guest-search .search-text {
  flex: 1;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.guest-search .search-arrow {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.3);
}

/* ==================== 已登录状态 ==================== */

/* 头像区域 */
.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 48rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.avatar-wrapper:active {
  opacity: 0.8;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(66, 255, 158, 0.3);
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #42ff9e 0%, #00b3d4 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 40rpx rgba(66, 255, 158, 0.3);
}

.avatar-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
}

.user-info {
  flex: 1;
}

.user-info:active {
  opacity: 0.8;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 12rpx;
}

.user-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.id-tag {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.6);
  font-family: monospace;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.pro-tag {
  background: rgba(26, 77, 54, 1);
  color: #42ff9e;
  font-weight: 700;
  border: 2rpx solid rgba(66, 255, 158, 0.2);
}

.settings-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.settings-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

.settings-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 统计数据 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 48rpx;
}

.stat-card {
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 140rpx;
}

.stat-card.highlight {
  border-color: rgba(66, 255, 158, 0.2);
}

.stat-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.4);
  font-weight: 700;
}

.stat-label.primary {
  color: #42ff9e;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
}

/* Tab 栏 */
.tabs {
  display: flex;
  gap: 48rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
  margin-bottom: 24rpx;
}

.tab {
  padding-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.4);
  position: relative;
}

.tab.active {
  color: #ffffff;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 48rpx;
  height: 4rpx;
  background: #42ff9e;
  border-radius: 4rpx;
  box-shadow: 0 0 16rpx #42ff9e;
}

/* 搜索入口 */
.search-entry {
  display: flex;
  align-items: center;
  background: rgba(30, 32, 36, 0.6);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 48rpx;
}

.search-entry:active {
  background: rgba(255, 255, 255, 0.05);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-text {
  flex: 1;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}

.search-arrow {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.2);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-bottom: 32rpx;
}

.empty-btn {
  background: rgba(66, 255, 158, 0.1);
  border: 2rpx solid rgba(66, 255, 158, 0.3);
  border-radius: 16rpx;
  padding: 20rpx 48rpx;
}

.empty-btn:active {
  background: rgba(66, 255, 158, 0.2);
}

.empty-btn text {
  font-size: 28rpx;
  font-weight: 700;
  color: #42ff9e;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.loading-state .loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(66, 255, 158, 0.2);
  border-top-color: #42ff9e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-state .loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 已认领比赛列表 - Demo 风格 */
.claimed-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 比赛卡片 - 对标 Demo 版 */
.race-card {
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  padding: 40rpx;
  position: relative;
  overflow: visible;
}

/* 卡片头部 */
.race-card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.race-title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.race-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
}

.verified-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(66, 255, 158, 0.1);
  border: 2rpx solid rgba(66, 255, 158, 0.2);
  border-radius: 32rpx;
  padding: 6rpx 16rpx;
}

.verified-icon {
  font-size: 20rpx;
  color: #42ff9e;
  font-weight: 700;
}

.verified-text {
  font-size: 20rpx;
  color: #42ff9e;
  font-weight: 700;
}

.more-menu-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.more-menu-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

.more-icon {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 副标题 */
.race-subtitle {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.4);
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 32rpx;
}

/* 大号总时间 */
.race-time-display {
  margin-bottom: 32rpx;
}

.race-total-time {
  display: block;
  font-size: 80rpx;
  font-weight: 700;
  color: #42ff9e;
  font-family: 'SF Mono', monospace;
  letter-spacing: -2rpx;
  text-shadow: 0 0 60rpx rgba(66, 255, 158, 0.2);
}

.race-time-label {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.3);
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-top: 8rpx;
}

/* 底部按钮 */
.race-action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  width: 100%;
  padding: 28rpx;
  background: transparent;
  border: 2rpx solid rgba(66, 255, 158, 0.3);
  border-radius: 20rpx;
  color: #42ff9e;
  font-size: 28rpx;
  font-weight: 700;
}

.race-action-btn:active {
  background: rgba(66, 255, 158, 0.1);
}

.action-arrow {
  font-size: 28rpx;
}

/* 卡片内菜单 */
.card-menu {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  display: none;
}

.card-menu.show {
  display: block;
}

.menu-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 32rpx;
}

.menu-content {
  position: absolute;
  top: 80rpx;
  right: 40rpx;
  background: #2A2D33;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  min-width: 200rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 32rpx;
  font-size: 26rpx;
  color: #ffffff;
}

.menu-item:active {
  background: rgba(255, 255, 255, 0.05);
}

.menu-item.danger {
  color: #ff4d4f;
}

.menu-icon {
  font-size: 28rpx;
}

/* ========== 专业报告列表 ========== */
.reports-list {
  padding: 0 32rpx;
}

.report-card {
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
}

.report-card:active {
  background: #252830;
}

.report-card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.report-badge {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.report-badge.success {
  background: rgba(66, 255, 158, 0.15);
  color: #42ff9e;
}

.report-badge.pending {
  background: rgba(251, 191, 36, 0.15);
  color: #fbbf24;
}

.report-badge.default {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.6);
}

.report-time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.4);
}

.report-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.report-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.report-meta .meta-item {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.report-meta .meta-divider {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
}

.report-action {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  border: 2rpx solid rgba(79, 70, 229, 0.4);
  border-radius: 16rpx;
  color: #8B7FF5;
  font-size: 26rpx;
  font-weight: 500;
}

.report-action:active {
  background: rgba(79, 70, 229, 0.1);
}
