/**
 * 比赛 Tab 样式
 */

.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.coming-soon {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 64rpx;
}

.icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 8rpx;
}

.hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
}
