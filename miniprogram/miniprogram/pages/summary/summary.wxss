/**
 * 比赛总结页样式
 */

.page-container {
  min-height: 100vh;
  background: #101013;
  position: relative;
}

/* 背景网格 */
.bg-grid {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  background-image: 
    linear-gradient(to right, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
    linear-gradient(to bottom, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
  background-size: 80rpx 80rpx;
  mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 0%, transparent 60%);
  -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 0%, transparent 60%);
  pointer-events: none;
  z-index: 0;
}

/* 头部 */
.header {
  position: sticky;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  padding-top: calc(env(safe-area-inset-top) + 24rpx);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
  background: rgba(16, 16, 19, 0.95);
  backdrop-filter: blur(20rpx);
  z-index: 100;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  color: #ffffff;
}

.header-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

.share-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 36rpx;
  color: #ffffff;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(66, 255, 158, 0.3);
  border-top-color: #42ff9e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 48rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  padding: 20rpx 64rpx;
  background: #42ff9e;
  color: #000000;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.back-link {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 内容区域 */
.content {
  position: relative;
  z-index: 1;
  padding: 32rpx;
  padding-bottom: calc(64rpx + env(safe-area-inset-bottom));
  height: calc(100vh - 112rpx);
  box-sizing: border-box;
}

/* 主卡片 */
.summary-card {
  background: #15171A;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 48rpx;
}

.race-name {
  font-size: 24rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 2rpx;
  display: block;
  margin-bottom: 16rpx;
}

.athlete-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.athlete-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  word-break: break-all;
}

.trophy-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

/* 核心成绩 */
.main-result {
  text-align: center;
  margin-bottom: 64rpx;
}

.time-label {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.3);
  letter-spacing: 6rpx;
  margin-bottom: 16rpx;
  text-transform: uppercase;
}

.total-time {
  font-size: 96rpx;
  font-weight: 700;
  color: #42ff9e;
  font-family: 'SF Mono', 'Monaco', 'Menlo', monospace;
  letter-spacing: -2rpx;
  text-shadow: 0 0 60rpx rgba(66, 255, 158, 0.3);
}

/* 徽章和排名 */
.badges-row {
  display: flex;
  gap: 12rpx;
}

.badge-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(30, 32, 36, 0.5);
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 20rpx 8rpx;
  min-height: 140rpx;
}

.badge-item.gold {
  border-color: rgba(251, 191, 36, 0.3);
}

.badge-icon {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.badge-item.gold .badge-text {
  color: #fbbf24;
}

.badge-text {
  font-size: 26rpx;
  font-weight: 700;
  color: #42ff9e;
}

.badge-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-bottom: 8rpx;
}

.badge-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
}

.badge-sub {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
  font-weight: 400;
}

.badge-beat {
  font-size: 18rpx;
  color: rgba(66, 255, 158, 0.8);
  margin-top: 6rpx;
}

/* 时间分布 - 三列布局 */
.breakdown-card {
  background: #15171A;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  padding: 32rpx 16rpx;
  margin-bottom: 24rpx;
  display: flex;
  position: relative;
  overflow: hidden;
}

.breakdown-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 12rpx 8rpx;
}

.breakdown-divider-v {
  width: 2rpx;
  background: rgba(255, 255, 255, 0.05);
  margin: 16rpx 0;
}

.breakdown-icon {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.breakdown-icon.run {
  background: rgba(236, 72, 153, 0.2);
}

.breakdown-icon.workout {
  background: rgba(66, 255, 158, 0.2);
}

.breakdown-icon.roxzone {
  background: rgba(96, 165, 250, 0.2);
}

.breakdown-title {
  display: block;
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.breakdown-sub {
  display: block;
  font-size: 14rpx;
  color: rgba(255, 255, 255, 0.3);
  margin-bottom: 12rpx;
}

.breakdown-time {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  font-family: 'SF Mono', 'Monaco', monospace;
  margin-bottom: 16rpx;
}

.breakdown-link {
  display: flex;
  align-items: center;
  gap: 2rpx;
  font-size: 18rpx;
  color: #42ff9e;
  opacity: 0.8;
}

.breakdown-link:active {
  opacity: 1;
}

.link-arrow {
  font-size: 18rpx;
}

/* 认领栏 */
.claim-bar {
  display: flex;
  align-items: center;
  background: #15171A;
  border: 2rpx solid rgba(66, 255, 158, 0.2);
  border-radius: 28rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 0 30rpx rgba(66, 255, 158, 0.1);
}

.claim-icon-wrap {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(66, 255, 158, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.claim-icon {
  font-size: 32rpx;
}

.claim-info {
  flex: 1;
}

.claim-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.claim-desc {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
}

.claim-btn {
  padding: 16rpx 32rpx;
  background: #42ff9e;
  color: #000000;
  font-size: 24rpx;
  font-weight: 700;
  border-radius: 12rpx;
}

.claim-btn.claimed {
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.5);
}

.claim-btn:active {
  opacity: 0.9;
}

/* 操作按钮 */
.actions {
  margin-top: 16rpx;
}

.primary-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  background: linear-gradient(90deg, #42ff9e 0%, #00cc6a 100%);
  border-radius: 28rpx;
  padding: 36rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 48rpx rgba(66, 255, 158, 0.4);
}

.primary-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-icon {
  font-size: 48rpx;
}

.btn-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.btn-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
}

.btn-desc {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 4rpx;
}

.secondary-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 28rpx;
  padding: 28rpx;
}

.secondary-btn:active {
  background: rgba(255, 255, 255, 0.05);
}

.sec-btn-icon {
  font-size: 32rpx;
}

.sec-btn-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 底部提示 */
.footer-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 48rpx;
  padding-bottom: 32rpx;
}

.tip-icon {
  font-size: 20rpx;
  opacity: 0.3;
}

.tip-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.2);
}
