/**
 * 搜索页面样式
 */

.page-container {
  padding: var(--spacing-md);
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
}

/* 搜索框 */
.search-box {
  margin-bottom: var(--spacing-lg);
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--color-surface-light);
  border-radius: var(--radius-xl);
  padding: 20rpx 24rpx;
  border: 2rpx solid var(--color-border);
  transition: border-color 0.2s;
}

.search-input-wrapper:focus-within {
  border-color: var(--color-primary);
}

.search-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  color: var(--color-text);
  background: transparent;
}

.search-placeholder {
  color: var(--color-text-muted);
}

.clear-icon {
  font-size: 28rpx;
  color: var(--color-text-muted);
  padding: 8rpx;
  margin-left: 8rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-text {
  margin-top: var(--spacing-md);
  color: var(--color-text-secondary);
  font-size: 26rpx;
}

/* 错误提示 */
.error-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.error-text {
  color: var(--color-error);
  font-size: 28rpx;
  margin-bottom: var(--spacing-md);
}

.retry-btn {
  padding: 16rpx 48rpx;
  background-color: var(--color-primary);
  color: var(--color-background);
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 500;
}

/* 搜索结果提示 */
.results-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  display: block;
  margin-bottom: 24rpx;
  padding-left: 4rpx;
}

/* 运动员卡片 - 对标正式版单行样式 */
.athlete-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #1E2024;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  transition: all 0.2s;
}

.athlete-card:active {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(66, 255, 158, 0.3);
}

.athlete-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #42ff9e;
  flex: 1;
}

.match-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-left: 16rpx;
}

/* 空状态 */
.empty,
.initial {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon,
.initial-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-lg);
}

.empty-text,
.initial-text {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-sm);
}

.empty-hint,
.initial-hint {
  font-size: 26rpx;
  color: var(--color-text-muted);
}




