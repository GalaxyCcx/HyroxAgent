/**
 * 比赛列表页样式 - 对标正式版
 */

.page-container {
  min-height: 100vh;
  background: #101013;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #101013;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn,
.search-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
}

.search-icon {
  font-size: 36rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 加载状态 */
.loading {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(66, 255, 158, 0.2);
  border-top-color: #42ff9e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 错误状态 */
.error-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 32rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  background: rgba(66, 255, 158, 0.1);
  border: 2rpx solid rgba(66, 255, 158, 0.3);
  border-radius: 16rpx;
  padding: 20rpx 48rpx;
  color: #42ff9e;
  font-size: 28rpx;
  font-weight: 700;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

/* 副标题 */
.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.4);
  display: block;
  margin-bottom: 24rpx;
}

/* 比赛列表 */
.race-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 比赛卡片 - 对标正式版布局 */
.race-card {
  display: flex;
  align-items: center;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 24rpx;
  padding: 24rpx;
  gap: 24rpx;
}

.race-card:active {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(66, 255, 158, 0.3);
}

/* 左侧大S标签 */
.season-badge {
  width: 80rpx;
  height: 80rpx;
  background: rgba(66, 255, 158, 0.15);
  border: 2rpx solid rgba(66, 255, 158, 0.3);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.season-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #42ff9e;
  font-style: italic;
}

/* 中间赛事信息 */
.race-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.race-event {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.race-division {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 右侧时间和按钮 */
.race-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
  flex-shrink: 0;
}

.race-time {
  font-size: 32rpx;
  font-weight: 700;
  color: #42ff9e;
  font-family: 'SF Mono', monospace;
}

.view-btn {
  font-size: 22rpx;
  font-weight: 600;
  color: #42ff9e;
  background: transparent;
  border: 2rpx solid rgba(66, 255, 158, 0.4);
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}
