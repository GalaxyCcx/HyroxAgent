/* 战报海报页样式 */
.poster-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
  padding: 32rpx;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(66, 255, 158, 0.3);
  border-top-color: #42ff9e;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.error-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(239, 68, 68, 0.2);
  border-radius: 50%;
  font-size: 48rpx;
  font-weight: 700;
  color: #ef4444;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 32rpx;
}

.retry-btn {
  padding: 20rpx 48rpx;
  background: #42ff9e;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #000;
}

/* 海报预览 */
.poster-preview {
  margin-bottom: 32rpx;
}

.poster-card {
  background: #1a1a2e;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.4);
}

/* 海报头部 */
.poster-header {
  position: relative;
  height: 160rpx;
  overflow: hidden;
}

.header-gradient {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 50%, #42ff9e 100%);
}

.header-content {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 32rpx;
}

.brand-text {
  font-size: 48rpx;
  font-weight: 900;
  color: #fff;
  letter-spacing: 4rpx;
}

.event-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

/* 海报主体 */
.poster-body {
  padding: 32rpx;
}

/* 运动员信息 */
.athlete-section {
  margin-bottom: 32rpx;
}

.athlete-name {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
}

.athlete-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 核心数据 */
.data-section {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.data-item {
  text-align: center;
}

.data-item.main {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.data-item.main .data-value {
  font-size: 56rpx;
  color: #42ff9e;
}

.data-row {
  display: flex;
}

.data-row .data-item {
  flex: 1;
}

.data-label {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 8rpx;
}

.data-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  font-family: 'SF Mono', monospace;
}

/* AI 总结 */
.summary-section {
  margin-bottom: 24rpx;
}

.summary-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.summary-icon {
  font-size: 24rpx;
}

.summary-title {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
}

.summary-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.6;
}

/* 亮点标签 */
.highlights-section {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.highlight-tag {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: rgba(66, 255, 158, 0.1);
  border: 2rpx solid rgba(66, 255, 158, 0.3);
  border-radius: 20rpx;
}

.highlight-icon {
  font-size: 20rpx;
  color: #42ff9e;
}

.highlight-text {
  font-size: 22rpx;
  color: #42ff9e;
}

/* 海报底部 */
.poster-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: rgba(0, 0, 0, 0.3);
}

.qrcode-placeholder {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.qr-text {
  font-size: 16rpx;
  color: #333;
  line-height: 1.4;
}

.footer-info {
  text-align: right;
}

.footer-brand {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
}

.footer-slogan {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 4rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.action-btn::after {
  display: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #42ff9e 0%, #2ed573 100%);
  color: #000;
}

.action-btn.secondary {
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  color: #fff;
}

.btn-icon {
  font-size: 32rpx;
}

/* 提示文字 */
.tip-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
}
