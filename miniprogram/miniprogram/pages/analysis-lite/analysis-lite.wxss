/**
 * 快速分析 (Lite) 页面样式
 */

.page-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 头部 */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(16, 16, 19, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
}

.header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-placeholder {
  width: 64rpx;
}

.back-icon {
  font-size: 48rpx;
  color: #ffffff;
}

.header-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 信息栏 */
.info-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 16rpx 32rpx 24rpx;
  background: #15171A;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
}

.info-item {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  font-family: monospace;
}

.info-divider {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.2);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(66, 255, 158, 0.3);
  border-top-color: #42ff9e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.loading-sub {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 32rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  padding: 20rpx 64rpx;
  background: #42ff9e;
  color: #000000;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 16rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  width: 100%;
  padding: 24rpx 32rpx;
  padding-bottom: calc(64rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  overflow-x: hidden;
}

/* Hero 卡片 */
.hero-card {
  position: relative;
  height: 320rpx;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.hero-bg {
  width: 100%;
  height: 100%;
  filter: grayscale(100%);
  opacity: 0.6;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, #000000 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
  z-index: 1;
}

.hero-top {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  z-index: 2;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #42ff9e;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.badge-icon {
  font-size: 18rpx;
}

.badge-text {
  font-size: 18rpx;
  font-weight: 700;
  color: #000000;
}

.hero-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}

.hero-bottom {
  position: absolute;
  bottom: 24rpx;
  left: 24rpx;
  right: 24rpx;
  display: flex;
  justify-content: space-between;
  z-index: 2;
}

.hero-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.stat-value-lg {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  font-family: monospace;
}

.stat-value-lg.highlight {
  color: #42ff9e;
  font-size: 28rpx;
}

.stat-sub {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.4);
  font-weight: 400;
}

.stat-label-sm {
  font-size: 16rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-top: 4rpx;
}

/* 结论卡片 */
.conclusion-card {
  position: relative;
  background: #1E2024;
  border: 2rpx solid rgba(66, 255, 158, 0.2);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.card-icon {
  font-size: 28rpx;
}

.card-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #ffffff;
}

.conclusion-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.7;
}

.card-glow {
  position: absolute;
  top: 0;
  right: 0;
  width: 160rpx;
  height: 160rpx;
  background: rgba(66, 255, 158, 0.05);
  border-radius: 50%;
  filter: blur(40rpx);
  transform: translate(30%, -30%);
}

/* 网格卡片 */
.grid-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.grid-card {
  flex: 1;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 24rpx;
}

.grid-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.grid-icon {
  font-size: 22rpx;
}

.grid-icon.good {
  color: #42ff9e;
}

.grid-icon.warn {
  color: #fbbf24;
}

.grid-title {
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
}

.grid-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.grid-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.item-dot.good {
  background: #42ff9e;
}

.item-dot.warn {
  background: #fbbf24;
}

.item-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.item-text.muted {
  color: rgba(255, 255, 255, 0.3);
}

/* 提示文案 */
.hint-text {
  display: block;
  text-align: center;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.3);
  margin-bottom: 24rpx;
}

/* 解锁按钮 */
.unlock-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  width: auto;
  padding: 32rpx;
  background: linear-gradient(135deg, #42ff9e 0%, #2ed573 100%);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  margin-left: 0;
  margin-right: 0;
  box-sizing: border-box;
  box-shadow: 0 8rpx 32rpx rgba(66, 255, 158, 0.3);
}

.unlock-icon {
  font-size: 28rpx;
}

.unlock-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
}

/* 底部操作 */
.action-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 700;
  line-height: 1;
}

.action-btn::after {
  display: none;
}

.action-icon {
  font-size: 24rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 锁定卡片 */
.locked-card {
  position: relative;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
  overflow: hidden;
}

.locked-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.locked-num {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #2A2D33;
  color: #42ff9e;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 8rpx;
}

.locked-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #ffffff;
}

.locked-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

.locked-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(2rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.locked-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 缓存提示 */
.cache-hint {
  text-align: center;
  padding: 16rpx;
}

.cache-text {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.3);
}
