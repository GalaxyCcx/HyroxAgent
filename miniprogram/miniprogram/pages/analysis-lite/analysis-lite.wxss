/**
 * 快速分析 (Lite) 页面样式
 */

.page-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 头部 */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(16, 16, 19, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
}

.header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-placeholder {
  width: 64rpx;
}

.back-icon {
  font-size: 48rpx;
  color: #ffffff;
}

.header-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 信息栏 */
.info-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 16rpx 32rpx 24rpx;
  background: #15171A;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
}

.info-item {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  font-family: monospace;
}

.info-divider {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.2);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(66, 255, 158, 0.3);
  border-top-color: #42ff9e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.loading-sub {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 32rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  padding: 20rpx 64rpx;
  background: #42ff9e;
  color: #000000;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 16rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  width: 100%;
  padding: 24rpx 32rpx;
  padding-bottom: calc(64rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  overflow-x: hidden;
}

/* Hero 卡片 - 2x2 网格布局 */
.hero-card {
  position: relative;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #1a1a2e 0%, #16162a 100%);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  padding: 24rpx;
}

.hero-top {
  margin-bottom: 20rpx;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 16rpx;
  background: #42ff9e;
  border-radius: 8rpx;
}

.badge-icon {
  font-size: 20rpx;
}

.badge-text {
  font-size: 20rpx;
  font-weight: 700;
  color: #000000;
  text-transform: uppercase;
}

/* 2x2 网格 */
.hero-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.hero-stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.08);
}

.stat-value-xl {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  font-family: 'SF Mono', 'Menlo', monospace;
  line-height: 1.2;
}

.stat-value-xl.highlight {
  color: #42ff9e;
  font-size: 32rpx;
}

.stat-sub {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  font-weight: 400;
}

.stat-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.45);
  margin-top: 8rpx;
}

/* 结论卡片 */
.conclusion-card {
  position: relative;
  background: #1E2024;
  border: 2rpx solid rgba(66, 255, 158, 0.2);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.card-icon {
  font-size: 28rpx;
}

.card-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #ffffff;
}

.conclusion-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.7;
}

/* 关键词高亮 - rich-text 内部样式 */
.highlight-keyword {
  color: #42ff9e;
  font-weight: 600;
}

.card-glow {
  position: absolute;
  top: 0;
  right: 0;
  width: 160rpx;
  height: 160rpx;
  background: rgba(66, 255, 158, 0.05);
  border-radius: 50%;
  filter: blur(40rpx);
  transform: translate(30%, -30%);
}

/* 网格卡片 */
.grid-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.grid-card {
  flex: 1;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 24rpx;
}

.grid-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.grid-icon {
  font-size: 22rpx;
}

.grid-icon.good {
  color: #42ff9e;
}

.grid-icon.warn {
  color: #fbbf24;
}

.grid-title {
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
}

.grid-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.grid-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.item-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-top: 10rpx;
}

.item-dot.good {
  background: #42ff9e;
}

.item-dot.warn {
  background: #fbbf24;
}

.item-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.4;
}

.item-text.muted {
  color: rgba(255, 255, 255, 0.3);
}

/* 百分位标签 */
.percentile-tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 18rpx;
  font-weight: 500;
  width: fit-content;
}

.percentile-tag.good {
  background: rgba(16, 185, 129, 0.2);
  color: #34d399;
  border: 1rpx solid rgba(16, 185, 129, 0.3);
}

.percentile-tag.warn {
  background: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
  border: 1rpx solid rgba(251, 191, 36, 0.3);
}

/* 分析口径 */
.analysis-scope {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.35);
  margin-bottom: 12rpx;
}

.conclusion-scope {
  margin-bottom: 16rpx;
}

/* 结论提示文字 */
.conclusion-hint {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.45);
  line-height: 1.6;
}

/* 提示文案 */
.hint-text {
  display: block;
  text-align: center;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.3);
  margin-bottom: 24rpx;
}

/* 解锁按钮 */
.unlock-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  width: auto;
  padding: 32rpx;
  background: linear-gradient(135deg, #42ff9e 0%, #2ed573 100%);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  margin-left: 0;
  margin-right: 0;
  box-sizing: border-box;
  box-shadow: 0 8rpx 32rpx rgba(66, 255, 158, 0.3);
}

.unlock-icon {
  font-size: 28rpx;
}

.unlock-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
}

/* 底部操作 */
.action-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 700;
  line-height: 1;
}

.action-btn::after {
  display: none;
}

.action-icon {
  font-size: 24rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 锁定卡片 */
.locked-card {
  position: relative;
  background: #1E2024;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
  overflow: hidden;
}

.locked-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.locked-num {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #2A2D33;
  color: #42ff9e;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 8rpx;
}

.locked-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #ffffff;
}

.locked-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

.locked-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(2rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.locked-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 缓存提示 */
.cache-hint {
  text-align: center;
  padding: 16rpx;
}

.cache-text {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.3);
}

/* ========== 弹窗样式 ========== */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 48rpx;
}

.modal-container {
  width: 100%;
  max-width: 640rpx;
  background: #1E2024;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.5);
}

.modal-body {
  padding: 32rpx;
}

.modal-hint {
  margin-bottom: 24rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.6;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx;
}

.modal-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.modal-btn.secondary {
  background: #2A2D33;
  color: rgba(255, 255, 255, 0.8);
}

.modal-btn.primary {
  background: linear-gradient(135deg, #42ff9e 0%, #2ed573 100%);
  color: #000000;
}

/* 进度弹窗 */
.progress-modal {
  text-align: center;
  padding: 48rpx;
}

.progress-icon {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 32rpx;
  background: linear-gradient(135deg, #42ff9e 0%, #2ed573 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pulse-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 4rpx solid #42ff9e;
  border-radius: 50%;
  animation: pulse 1.5s ease-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.icon-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
}

.progress-title {
  display: block;
  margin-bottom: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.progress-hint {
  display: block;
  margin-top: 24rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}
