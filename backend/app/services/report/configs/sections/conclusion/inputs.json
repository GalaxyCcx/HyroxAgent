{
  "section_id": "conclusion",
  "type": "static",
  "description": "总结章节 - 数据来自各章节的 highlights",
  
  "data_source": {
    "from_sections": ["summary", "time_loss", "prediction", "training"],
    "collect_fields": ["highlights", "key_improvements", "recommended_target"]
  },
  
  "template": {
    "structure": [
      {
        "type": "strengths",
        "title": "您的優勢",
        "source": "summary.highlights[type=strength]"
      },
      {
        "type": "improvements",
        "title": "重點改進方向",
        "source": "time_loss.loss_items + training.weakness_analysis"
      },
      {
        "type": "next_steps",
        "title": "下一步行動",
        "source": "training.key_workouts[0:3]"
      },
      {
        "type": "target",
        "title": "目標成績",
        "source": "prediction.recommended_target"
      }
    ]
  }
}
